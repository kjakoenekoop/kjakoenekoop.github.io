---
const {notification}: {notification: string} = Astro.props
---

<div id="notification-bar" class="bg-brand py-1 text-center font-medium fixed top-16 inset-x-0 z-40">
    {notification}
    <div class="absolute right-4 top-1/2 -translate-y-1/2 cursor-pointer text-black" id="notification-close-button">X</div>
</div>

<script>
    const notificationCloseButton = document.getElementById('notification-close-button')
    const notificationBar = document.getElementById('notification-bar')
    notificationCloseButton.addEventListener('click', () => notificationBar.classList.add('hidden'))
</script>